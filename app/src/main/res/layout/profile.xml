<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <include layout="@layout/toolbar"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layoutDirection="rtl"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <app.yarbax.com.MyViews.CircularImageView
                android:id="@+id/headerimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@mipmap/navheaderimage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="ایمان مینایی"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/header_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="امتیاز"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    <EditText
                        android:id="@+id/profile_point"
                        android:layout_marginRight="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:focusable="false"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_btn_curve"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:text="1200"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:background="@drawable/white_box_curve">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/profile_edit_name"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:text="Shayan rahimian"
                    android:background="@drawable/gray_btn_curve"/>
                <ImageView
                    android:id="@+id/edit_name"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="11dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/edit"/>
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/profile_edit_email"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:text="Srahimioan@gmail.com"
                    android:background="@drawable/gray_btn_curve"/>
                <ImageView
                    android:id="@+id/edit_email"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="11dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/edit"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/profile_number"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:text="09126500640"
                    android:background="@drawable/gray_btn_curve"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/profile_support"/>
                <TextView
                    android:id="@+id/profile_call_support"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="تماس با پشتیانی"/>

            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>
</ScrollView>