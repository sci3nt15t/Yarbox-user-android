<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar"></include>


    <LinearLayout
        android:id="@+id/frame1"
        android:background="@drawable/frame_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:layout_marginTop="150dp">
        <TextView
            android:id="@+id/txt_view_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/colorAccent"
            android:text="درب منزل"
            android:textSize="21sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="5dp"
            android:text="در صورت انتخاب درب منزل, مرسوله شما در آدرس وارد شده به گیرنده تحویل داده می شود."
            android:textSize="14dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:src="@mipmap/manzel"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/frame2"
        android:background="@drawable/frame_border"
        android:layout_below="@id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:layout_marginTop="120dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="80dp"
            android:textColor="@color/colorAccent"
            android:text="ترمینال "
            android:textSize="21sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:lineSpacingExtra="5dp"
            android:text="در صورت انتخاب ترمینال, مرسوله شما در محل ترمینال شهر انتخاب شده به گیرنده تحویل داده می شود."
            android:textSize="14dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@mipmap/terminal"
        android:layout_below="@id/frame1"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>